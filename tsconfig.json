{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": "./src"
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"]
}
